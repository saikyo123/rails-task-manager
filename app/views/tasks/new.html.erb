<div class="container">

<div class="mb-3">
  <%= form_with model: @task do |f| %>
    <div class="mb-3">
      <%= f.label :title, class: "form-label" %>
      <%= f.text_field :title, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label :details, class: "form-label" %>
      <%= f.text_area :details, rows: 3, class: "form-control" %>
    </div>

    <%= f.submit "Submit", class: "btn btn-primary" %>
    <button type="button" class="btn btn-warning"> <%= link_to "Return", "/tasks" %> </button>
  <% end %>
</div>
</div>
